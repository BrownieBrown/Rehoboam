# KICKBASE Credentials
KICKBASE_EMAIL=your-email@example.com
KICKBASE_PASSWORD=your-password

# Trading Configuration
# Minimum profit percentage to trigger a sell (e.g., 5 means 5% profit)
MIN_SELL_PROFIT_PCT=5.0

# Maximum loss percentage before auto-selling (e.g., -3 means sell at 3% loss)
MAX_LOSS_PCT=-3.0

# Minimum market value increase to consider buying (e.g., 10 means player value went up 10%)
MIN_BUY_VALUE_INCREASE_PCT=10.0

# Budget management
MAX_PLAYER_COST=5000000  # Max amount to spend on a single player
RESERVE_BUDGET=1000000   # Always keep this much in reserve

# Safety settings
DRY_RUN=true  # Set to false to enable actual trading
